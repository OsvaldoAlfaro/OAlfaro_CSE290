#include <iostream>

using namespace std;

//function to say hello world
void welcomeMessage(){
cout << "Hello World!" << endl;
}

//function to find the maximum value in the array
int findMax(int arr[], int size) {
	int maxValue = arr[0];
	for (int i = 0; i < size; i++) {
		if (maxValue < arr[i]) {
			maxValue = arr[i];
		}
	}
	return maxValue;
}


int main() {

	//declaring variables
	const int size = 6;
	int maxValue;
	int array[size];	// declaring array and allocating memory 

  //call Hello world function
  welcomeMessage();

	//loop to find the max value
	for (int i = 0; i < size; i++) {
		cout << "Enter your element value for:" << i+1 << "-->";
		cin >> array[i];
	}

	//output the highest value 
	cout << "\nThe max value for this program is: " << (maxValue = findMax(array, size));
	
	return 0;
}
